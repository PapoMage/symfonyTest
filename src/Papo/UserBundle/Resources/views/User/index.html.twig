{% extends 'layout.html.twig' %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}

{% block body %}

<h2 class="text-danger">Users</h2>

<table border="1">
	<tr>
		<th>Username</th>
		<th>Firstname</th>
		<th>Last name</th>
		<th>Email</th>
		<th>Role</th>
		<th>Created</th>
		<th>Updated</th>
		<th>Action</th>
	</tr>
	{% for user in users %}
		<tr>
			<td>{{ user.username }}</td>
			<td>{{ user.firstname }}</td>
			<td>{{ user.lastName }}</td>
			<td>{{ user.email }}</td>
			<td>
				{% if user.role == 'ROLE_ADMIN'%}
					<strong>Administrator</strong>
				{% elseif user.role == 'ROLE_USER' %}
					<strong>User</strong>
				{% endif %}
			</td>
			<td>{{ user.createAt|date('d-m-Y H:i') }}</td>
			<td>{{ user.updatedAt|date('d-m-Y H:i') }}</td>
			<td>
				<a href=#>View</a>
				<a href=#>Update</a>
				<a href=#>Delete</a>
			</td>

		</tr>
	{% endfor %}
</table>

{% endblock %}